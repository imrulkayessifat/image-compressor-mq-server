generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  NOT_COMPRESSED
  ONGOING
  COMPRESSED
}

enum Plan {
  MICRO
  PRO
  ADVANCED
}

model Store {
  name     String    @id
  plan     Plan      @default(MICRO)
  dataUsed Float?     @default(0)
  product  Product[]
}

model Product {
  id        String  @id
  title     String
  images    Image[]
  storename String
  store     Store   @relation(fields: [storename], references: [name])
}

model Image {
  id        String  @id
  url       String
  productId String
  status    Status? @default(NOT_COMPRESSED)
  product   Product @relation(fields: [productId], references: [id])
}
