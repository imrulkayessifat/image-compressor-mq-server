generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  NOT_COMPRESSED
  ONGOING
  RESTORING
  COMPRESSED
}

enum Plan {
  FREE
  MICRO
  PRO
  ADVANCED
}

enum CompressType {
  BALANCED
  CONSERVATIVE
  CUSTOM
}

model Store {
  name            String        @id
  plan            Plan          @default(FREE)
  dataUsed        Float?        @default(0)
  chargeId        String?
  autoCompression Boolean       @default(false)
  autoFileRename  Boolean       @default(false)
  autoAltRename   Boolean       @default(false)
  compressionType CompressType? @default(BALANCED)
  jpeg            Float?        @default(80)
  png             Float?        @default(80)
  others          Float?        @default(80)
  product         Product[]
}

model Product {
  id        String  @id
  title     String
  images    Image[]
  storename String
  store     Store   @relation(fields: [storename], references: [name])
}

model Image {
  id        String  @id
  url       String
  name      String?
  alt       String?
  productId String
  status    Status? @default(NOT_COMPRESSED)
  product   Product @relation(fields: [productId], references: [id])
}

model Backup {
  restoreId String @id
  url       String
}
